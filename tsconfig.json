{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "removeComments": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "newLine": "lf",
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
